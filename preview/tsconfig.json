{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "jsxFactory": "h",
        "baseUrl": "src",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./js/",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "src/**/*"
    ]
}